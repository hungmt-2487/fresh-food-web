<div class="container">
  <div class="row">
    <h1 class="title">Login</h1>
  </div>
  <div class="row justify-content-center">
    <div class="col-6">
      <%= form_for :session, url: user_session_path do |f| %>
        <div class="form-group">
          <%= f.label :username %>
          <%= f.text_field :username, placeholder: "Enter your username", class: "form-control mb-2" %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, placeholder: "Enter your password",
            class: "form-control mb-2" %>
        </div>
        
        <% if devise_mapping.rememberable? %>
          <div class="field mb-4">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="text-center">
          <%= f.submit "Login", class: "btn btn-info col-6" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
